<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Add a New Student"
        android:textColor="#A600FF"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHeader"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="16dp"
        android:background="#E0E0E0"
        android:clipToOutline="true"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="16dp"
        android:elevation="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:outlineAmbientShadowColor="#00FF00"
        android:outlineSpotShadowColor="#00FF00"
        android:padding="16dp"
        android:radius="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:background="#E0E0E0"
        android:padding="16dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="#00FF00"
        android:outlineAmbientShadowColor="#00FF00"
        android:clipToOutline="true"
        android:radius="8dp"
        android:elevation="8dp"
        android:layout_below="@id/firstname" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:background="#E0E0E0"
        android:padding="16dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="#00FF00"
        android:outlineAmbientShadowColor="#00FF00"
        android:clipToOutline="true"
        android:radius="8dp"
        android:elevation="8dp"
        android:layout_below="@id/lastName" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:background="#E0E0E0"
        android:padding="16dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="phone"
        android:drawableStart="@drawable/baseline_phone_android_24"
        android:drawablePadding="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="#00FF00"
        android:outlineAmbientShadowColor="#00FF00"
        android:clipToOutline="true"
        android:radius="8dp"
        android:elevation="8dp"
        android:layout_below="@id/email" />

    <EditText
        android:id="@+id/rollNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Roll Number"
        android:background="#E0E0E0"
        android:padding="16dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:drawableStart="@drawable/baseline_school_24"
        android:drawablePadding="16dp"
        android:inputType="text"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="#00FF00"
        android:outlineAmbientShadowColor="#00FF00"
        android:clipToOutline="true"
        android:radius="8dp"
        android:elevation="8dp"
        android:layout_below="@id/phone" />

    <EditText
        android:id="@+id/course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course"
        android:background="#E0E0E0"
        android:padding="16dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:drawableStart="@drawable/baseline_book_24"
        android:drawablePadding="16dp"
        android:inputType="text"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="#00FF00"
        android:outlineAmbientShadowColor="#00FF00"
        android:clipToOutline="true"
        android:radius="8dp"
        android:elevation="8dp"
        android:layout_below="@id/rollNumber" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="#00FF00"
        android:textColor="#FFFFFF"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="#00FF00"
        android:outlineAmbientShadowColor="#00FF00"
        android:clipToOutline="true"
        android:radius="8dp"
        android:elevation="8dp"
        android:layout_below="@id/course" />

</RelativeLayout>
